{
    "version": 8,
    "configurePresets": [
        {
            "name": "hello-config-base",
            "displayName": "Base Configuration",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "toolchainFile": "${sourceDir}/cmake/toolchains/ti-cgt-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "bin"
            }
        },
        {
            "name": "hello-config-debug",
            "inherits": "hello-config-base",
            "displayName": "Debug (Cortex-M3)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}